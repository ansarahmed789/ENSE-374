<div class="note">
    <p><%= note.content %></p>
    <div class="actions">
      <form action="/upvote" method="POST" style="display:inline;">
        <input type="hidden" name="noteId" value="<%= note._id %>">
        <button type="submit" class="btn btn-success">Upvote (<%= note.upvotes %>)</button>
      </form>
      <form action="/downvote" method="POST" style="display:inline;">
        <input type="hidden" name="noteId" value="<%= note._id %>">
        <button type="submit" class="btn btn-danger">Downvote (<%= note.downvotes %>)</button>
      </form>
    </div>
  </div>
  